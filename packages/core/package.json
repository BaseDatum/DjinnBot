{
  "name": "@djinnbot/core",
  "version": "0.1.0",
  "private": true,
  "description": "Pipeline engine, event bus, memory, and agent runtime",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./redis-protocol": {
      "import": "./dist/redis-protocol/index.js",
      "types": "./dist/redis-protocol/index.d.ts"
    },
    "./chat": {
      "import": "./dist/chat/index.js",
      "types": "./dist/chat/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/main.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "^0.52.12",
