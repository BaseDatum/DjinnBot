    "@sinclair/typebox": "^0.34.48",
    "better-sqlite3": "^11.0.0",
    "clawvault": "^2.4.6",
    "dockerode": "^4.0.9",
    "ioredis": "^5.4.0",
    "node-llama-cpp": "^3.15.1",
    "yaml": "^2.8.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/dockerode": "^3.3.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
